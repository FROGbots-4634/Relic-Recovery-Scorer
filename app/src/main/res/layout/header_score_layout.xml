<LinearLayout android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:clickable="true"
              android:elevation="4dp"
              android:outlineProvider="bounds"
              android:id="@+id/scoreHeaderLinearLayout"
              xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@drawable/score_header_shadow"
                  android:orientation="vertical"
                  android:id="@+id/scoreHeaderLinearLayout2"
                  xmlns:android="http://schemas.android.com/apk/res/android">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/scoreView"
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Score: 0"
                android:textSize="@dimen/scoreHeaderTextSize"/>

            <ImageButton
                android:id="@+id/imageView2"
                android:tint="@android:color/white"
                android:layout_width="wrap_content"
                android:padding="@dimen/padding_s"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_play_arrow"/>

        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="@dimen/cardHeadingTextSize"
                android:text="@string/timer_not_running"
                android:layout_marginBottom="@dimen/padding_s"
                android:background="@android:color/transparent"/>

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="match_parent"
                android:progressDrawable="@drawable/progress_drawable_blue"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_height="4dp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>