<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    xmlns:style="http://schemas.android.com/tools"
                                    android:id="@+id/card_view"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    card_view:cardBackgroundColor="@color/cardview_light_background"
                                    card_view:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/padding_s"
        android:paddingTop="@dimen/padding_s">

        <TextView
            android:id="@+id/card_teleop_cryptoboxRowsComplete_header_txtView"
            android:text="@string/desc_cryptobox_rows"
            style="@style/CardHeader" />

        <RelativeLayout
            android:padding="@dimen/padding_s"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:layout_width="wrap_content"
                android:id="@+id/teleop_cryptoboxRowsCompletePlus"
                android:layout_alignParentRight="true"
                android:src="@drawable/increment_positive"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:text="0"
                android:id="@+id/teleop_cryptoboxRowsCompleteTxtView"
                android:textColor="@color/teleop_dark"
                android:textSize="@dimen/itemIncrementerCountTextSize"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

            <ImageButton
                android:layout_width="wrap_content"
                android:id="@+id/teleop_cryptoboxRowsCompleteMinus"
                android:src="@drawable/increment_negative"
                android:layout_height="wrap_content" />

        </RelativeLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>